package GymClasses;

import java.util.*;
import java.io.*;
public class MainProgram {

	public static void main(String[] args) {


		System.out.println("Welcome, the program is now running.\n Type in the number/word representing what you want to do");
		System.out.println("1: Create a new member");
		System.out.println("2: Create a new class");
		System.out.println("3: Add a gymcard to an existing member");
		System.out.println("quit: to exit the program");
		menu();

	}
	public static void menu(){
		Scanner scanner1 = new Scanner(System.in);
		int i = 0;
		while (i < 1){
			System.out.print(">> ");
			String input = scanner1.nextLine();
			// Create a new member
			if (input.equals("1")){
				createMember();
			}
			// Create a new class
			if (input.equals("2")){

			}
			// Add a gymcard to an existing member
			if (input.equals("3")){

			}
			if (input.equals("quit")){
				System.out.println("Goodbye!");
				i += 1;
			}
			else{
				System.out.println(input + " command does not exist!");
			}

		}
		scanner1.close();
	}

	public static void createMember(){
		Scanner scanner2 = new Scanner(System.in);
		System.out.println("Enter the members ID-number: ");
		String id = scanner2.nextLine();
		System.out.println("Enter the members first name: ");
		String fName = scanner2.nextLine();
		System.out.println("Enter the members last name: ");
		String lName = scanner2.nextLine();
		GymClasses.Member.createMember(fName, lName, id);
		menu();
		//scanner2.close();
	}

}
