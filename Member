package GymClasses;
import java.util.*;
import java.text.*;

public class Member {
	// private variables
	private String lastName;
	private String firstName;
	private int[] idNumber = new int[4]; // int[yy, mm, dd, xxxx]
	private String registrationDate;
	private static int numberOfMembers = 0;
	
	public static int amountOfMembers(){
		return numberOfMembers;
	}
	//constuctor
	public Member(){
		firstName = " ";
		lastName = " ";
		numberOfMembers += 1;
		Date currentDate = new Date();
		SimpleDateFormat form = new SimpleDateFormat("yyyy.MM.dd E 'at' hh:mm:ss");
		registrationDate = form.format(currentDate);
	}
}
